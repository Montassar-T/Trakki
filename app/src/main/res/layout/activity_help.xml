<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24sp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24sp"
        android:background="@color/green"
        android:paddingVertical="24sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"

            android:src="@drawable/arrow" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plusjakartasans_bold"
            android:text="Help &amp; Support"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#909090"
            android:textSize="16sp"
            android:layout_marginBottom="24sp"
            android:fontFamily="@font/plusjakartasans_bold"
            android:text="Frequently Asked Questions"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4sp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:src="@drawable/reset"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="4sp"
                    android:textColor="#333333"
                    android:text="How do I reset my password?"
                    android:fontFamily="@font/plusjakartasans_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:id="@+id/text_first"
                    android:textColor="#333333"

                    android:text="To reset your password, go to the login screen and click on &quot;Forgot Password.&quot; Follow the instructions sent to your email."
                    android:fontFamily="@font/plusjakartasans_regular"/>


            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:padding="2sp"
                android:id="@+id/first"
                android:src="@drawable/downarrow"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4sp"
            android:layout_marginTop="12sp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:src="@drawable/set"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#333333"

                    android:layout_marginBottom="4sp"
                    android:text="How can I change my account settings? "
                    android:fontFamily="@font/plusjakartasans_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/text_second"
                    android:visibility="gone"
                    android:textColor="#333333"

                    android:text="You can change your account settings by going to the Profile section within the app."
                    android:fontFamily="@font/plusjakartasans_regular"/>


            </LinearLayout>
            <ImageView
                android:id="@+id/second"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:padding="2sp"
                android:src="@drawable/downarrow"/>

        </LinearLayout> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4sp"
            android:layout_marginTop="12sp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:src="@drawable/bug"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="4sp"
                    android:textColor="#333333"

                    android:text="What should I do if I encounter a bug? "
                    android:fontFamily="@font/plusjakartasans_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/text_third"
                    android:visibility="gone"
                    android:textColor="#333333"

                    android:text="Please report any bugs though our contact form so we can address them promptly."
                    android:fontFamily="@font/plusjakartasans_regular"/>


            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:padding="2sp"
                android:id="@+id/third"

                android:src="@drawable/downarrow"/>

        </LinearLayout>



    </LinearLayout> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#909090"
            android:textSize="16sp"
            android:layout_marginBottom="24sp"
            android:fontFamily="@font/plusjakartasans_bold"
            android:text="Contact Us"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4sp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:src="@drawable/email"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="4sp"
                    android:textColor="#333333"

                    android:text="Email:"
                    android:fontFamily="@font/plusjakartasans_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#333333"

                    android:layout_marginBottom="4sp"
                    android:text=" support@example.com "
                    android:fontFamily="@font/plusjakartasans_regular"/>



            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4sp"
            android:layout_marginTop="12sp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:src="@drawable/call"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#333333"

                    android:layout_marginBottom="4sp"
                    android:text="Phone: "
                    android:fontFamily="@font/plusjakartasans_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#333333"

                    android:layout_marginBottom="4sp"
                    android:text="+216 25-030-213 "
                    android:fontFamily="@font/plusjakartasans_regular"/>



            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>